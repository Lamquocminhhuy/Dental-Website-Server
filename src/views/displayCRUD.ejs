<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
    table, th, td {
    border: 1px solid black;
    border-collapse: collapse;

    }   
    .btn-edit {
        background-color: orange;
        outline: none;
        border-radius: 3px;
        height: 25px;
        width: 60px;
        margin: 5px 0px;
        cursor: pointer;
      
    }
    .btn-delete {
        background-color: red;
        outline: none;
        border-radius: 3px;
        height: 25px;
        width: 60px;
        margin: 5px 0px;
        cursor: pointer;
    }
    </style>
</head>
<body>
    <table style="width:100%">
        <tr>
          <th>Email</th>
          <th>First Name</th> 
          <th>Lastname</th>
          <th>Address</th>
          <th>Action</th>
     
        </tr>
        <% for (let i=0; i < datatable.length; i++) { %>
            <tr>
                <td><%= datatable[i].email %></td>
                <td><%= datatable[i].firstName %></td>
                <td><%= datatable[i].lastName %></td>
                <td><%= datatable[i].address %></td>
                <td>
                    <a href="/edit-crud?id=<%= datatable[i].id %>" class="btn-edit" type="button">Edit</a>
                    <a href="" class="btn-delete" type="button">Delete</a>
                </td>
           
              </tr>
        <% } %>
        
      </table>
      
</body>
</html>